<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="mapper.storep">
	<!-- 스토어 상품문의 - 답변 화면 -->
	<select id = "replist" parameterType = "java.lang.String" resultType = "com.myjeju.vo.StorepVO">
		select id, sid, st_id, str_id, str_content, str_time from myjeju_storep where sid = #{sid}
	</select>
	
	<!-- 스토어 상품문의 - 답변 등록 -->
	<insert id = "repinsert" parameterType = "com.myjeju.vo.StorepVO">
		insert into myjeju_storep values(#{id}, #{sid}, #{st_id}, 'str_'||sequ_myjeju_store.nextval, #{str_content}, sysdate)
	</insert>
	
</mapper>